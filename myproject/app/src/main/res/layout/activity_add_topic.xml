<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddTopicActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add topic"
            android:textSize="25sp"
            android:padding="30dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
    />
    <TextView
            android:id="@+id/name_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="25sp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
           />
    <TextView
            android:id="@+id/email_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:textSize="25sp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="10dp"
            />
    <EditText
            android:id="@+id/new_topic"
            android:hint="New topic ..."
            android:textColorHint="#52afaa"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="10dp"
    />
    <Button
            android:text="Send"
            android:id="@+id/btn_add_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/new_topic"
            android:layout_centerHorizontal="true"
            />
</RelativeLayout>